rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // School documents — authenticated users only. Size limit 50MB.
    // NOTE: App validates school access; consider Cloud Function upload for strict per-school isolation.
    match /documents/{schoolId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024;
      allow delete: if request.auth != null;
    }

    // Teacher profile photos — authenticated users can read; teacher can write own.
    match /teacherPhotos/{teacherId}/{fileName} {
      allow read: if request.auth != null;
      allow write, delete: if request.auth != null
        && request.auth.uid == teacherId
        && request.resource.size < 5 * 1024 * 1024;
    }

    // School logos — public read; only school owner can write/delete (prevents cross-school tampering).
    match /schoolLogos/{schoolId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024
        && firestore.exists(/databases/(default)/documents/schools/$(schoolId))
        && firestore.get(/databases/(default)/documents/schools/$(schoolId)).data.ownerUid == request.auth.uid;
      allow delete: if request.auth != null
        && firestore.exists(/databases/(default)/documents/schools/$(schoolId))
        && firestore.get(/databases/(default)/documents/schools/$(schoolId)).data.ownerUid == request.auth.uid;
    }

    // School library book covers and digital page photos — authenticated users only.
    match /schoolLibraries/{schoolId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 20 * 1024 * 1024;
      allow delete: if request.auth != null;
    }

    // Homework submissions — authenticated users only.
    match /homework/{schoolId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 25 * 1024 * 1024;
      allow delete: if request.auth != null;
    }
  }
}
